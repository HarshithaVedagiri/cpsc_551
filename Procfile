# See <https://www.ruby-forum.com/t/forcing-stdout-sync-for-scripts/48876/8>
naming_tuplespace: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' naming_tuplespace.rb
alice_tuplespace: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' alice_tuplespace.rb
bob_tuplespace: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' bob_tuplespace.rb
chuck_tuplespace: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' chuck_tuplespace.rb
naming_server_adapter: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' naming_server_adapter.rb
alice_adapter: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' alice_adapter.rb
bob_adapter: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' bob_adapter.rb
chuck_adapter: ruby -e '$stdout.sync = true; load($0 = ARGV.shift)' chuck_adapter.rb
naming_server: python3 naming_logging.py
